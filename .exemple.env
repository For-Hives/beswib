# Example .env - do NOT store real secrets here. Replace values before use.

# Pocketbase configuration
NEXT_PUBLIC_POCKETBASE_URL=https://api.example.com
POCKETBASE_TOKEN=pb_token_example_1234567890

# Clerk configuration
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_example_publishable_key
CLERK_SECRET_KEY=sk_test_example_secret_key
CLERK_WEBHOOK_SIGNING_SECRET=whsec_example_signing_secret

# PayPal configuration
NEXT_PUBLIC_PAYPAL_CLIENT_ID=example_paypal_client_id
PAYPAL_CLIENT_SECRET=example_paypal_client_secret
PAYPAL_BN_CODE=EXAMPLEBNCODE_MP
PAYPAL_API_URL=https://api-m.sandbox.paypal.com
PAYPAL_WEBHOOK_ID=EXAMPLE_WEBHOOK_ID

# Discord
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/EXAMPLE/EXAMPLE

# Resend
RESEND_API_KEY=re_example_api_key

# Notification emails - set to real admin addresses in production
NOTIFY_CONTACT_EMAIL_TO=contact@example.com
NOTIFY_SALES_EMAIL_TO=sales@example.com
NOTIFY_EMAIL_FROM=no-reply@example.com

# Batch chunk size for batch sends (Resend) - default 100
NOTIFY_BATCH_CHUNK_SIZE=100



# sentry
SENTRY_AUTH_TOKEN=sntrys_XXX
SENTRY_DSN=https://sentry_url
